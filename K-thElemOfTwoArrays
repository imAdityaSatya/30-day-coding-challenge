

// User function Template for Java

class Solution {
    public long kthElement(int k, int arr1[], int arr2[]) {
        // code here
        int m = arr1.length;
        int n = arr2.length;
        
        int arr3[] = new int[m+n];
        System.arraycopy(arr1, 0, arr3, 0, m);
        System.arraycopy(arr2, 0, arr3, m, n);
        
        Arrays.sort(arr3);
        return arr3[k-1];
        
    }
}
